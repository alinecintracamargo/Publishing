<%= form_with(model: book) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :publishing_at, class: "form-label" %>
    <%= form.datetime_field :publishing_at, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :author_id, class: "form-label" %>
    <%= form.collection_select(:author_id, Author.all, :id, :name, { prompt: true }, { class: "form-input" }) %>
  </div>



  <div class="flex items-center justify-between flex-wrap">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", books_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to "Cancel", book_path(@book), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
